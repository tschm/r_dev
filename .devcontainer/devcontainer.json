{
    "name": "R Development Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "REditorSupport.r",
                "RDebugger.r-debugger",
                "quarto.quarto",
                "formulahendry.code-runner"
            ],
            "settings": {
                "r.rterm.linux": "/usr/local/bin/R",
                "r.bracketedPaste": true,
                "r.plot.useHttpgd": true
            }
        }
    },

    "features": {
        "ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
            "packages": "tidyverse,data.table,devtools,languageserver"
        }
    },

    "forwardPorts": [8787],

    "postCreateCommand": "R -e 'install.packages(c(\"httpgd\", \"rmarkdown\", \"knitr\"))'",

    "remoteUser": "rstudio"
}
